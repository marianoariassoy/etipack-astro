---
import { navMenu, dataFooter } from "../data/data";
---

<section class="bg-black text-white pb-12 pt-24" id="footer">
  <div class="w-full max-w-5xl m-auto px-6 flex flex-wrap">
    <div class="w-full md:w-1/3">
      <ul class="nav-footer">
        {
          navMenu.map((item) => (
            <li class="mb-2">
              <a href={item.url} class="text-white hover:text-gray-400">
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="w-full md:w-1/3 mb-6">
      <ul class="nav-footer">
        {
          dataFooter.map((item) => (
            <li class="mb-2">
              <a href={`./etiquetas-autoadhesivas/${item.url}`} class="text-white hover:text-gray-400">
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="w-full md:w-1/3 flex items-start md:items-end flex-wrap flex-col mb-6">
      <a href="#contact" class="inline btn-nav-2 text-white bg-secondary px-8 py-2 rounded-lg mb-6 scroll"> Contactanos</a>
      <img src="/assets/logo-white.svg" alt="Etipack Logo" class="mb-6" />

      <div class="flex items-center">
        <a href="#" target="_blank" class="ml-2 hover:bg-gray-600 p-2 rounded-full w-8 h-8">
          <img src="/assets/envelope-solid.svg" />
        </a>
        <a href="#" target="_blank" class="ml-2 hover:bg-gray-600 p-2 rounded-full w-8 h-8">
          <img src="/assets/instagram.svg" />
        </a>
      </div>
    </div>
  </div>
  <div class="text-center text-sm">Copyright &copy; - Etipack</div>
</section>
